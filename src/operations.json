{
	"xhtml-table-insert": {
		"__documentation": {
			"summary": "Insert an XHTML table",
			"category": "add-on/fontoxml-table-flow-xhtml",
			"fontosdk": true,
			"params": [
				{
					"name": "[rows=1]",
					"type": "number",
					"description": "The number of rows to create for the new table"
				},
				{
					"name": "[columns=1]",
					"type": "number",
					"description": "The number of columns to create for the new table"
				}
			]
		},
		"label": "t__Table",
		"description": "t__Insert a table.",
		"icon": "table",
		"initialData": {
			"childNodeStructure": [
				"table"
			]
		},
		"steps": [
			{
				"type": "operation/table-insert"
			}
		]
	},
	"xhtml-open-table-column-sizing-popover": {
		"label": "t__Adjust column size",
		"steps": {
			"type": "operation/open-table-column-sizing-popover",
			"data": {
				"popoverAnchorNodeId": "{{contextNodeId}}"
			}
		}
	}
}
